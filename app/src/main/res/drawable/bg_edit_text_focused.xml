<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:padding="@dimen/padding_shape"
            android:shape="rectangle">

            <solid android:color="@color/cream_bright_40" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/corner_radius"
                android:topRightRadius="@dimen/corner_radius" />
        </shape>
    </item>
    <item
        android:left="@dimen/border_offset"
        android:right="@dimen/border_offset"
        android:top="@dimen/border_offset">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/stroke_double"
                android:color="@color/cream_bright"/>
        </shape>
    </item>
</layer-list>