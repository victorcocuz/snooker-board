<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/green_dark">

    <item android:id="@android:id/background">
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/white_disabled" />
                    <corners android:radius="@dimen/margin_xxxsmall" />
                    <stroke
                        android:width="@dimen/stroke_single"
                        android:color="@color/white_disabled" />
                </shape>
            </item>

            <item android:state_selected="true">
                <shape>
                    <solid android:color="@color/green" />
                    <corners android:radius="@dimen/margin_xxxsmall" />
                    <stroke
                        android:width="@dimen/stroke_single"
                        android:color="?attr/colorOnPrimary" />
                </shape>
            </item>

            <item android:state_selected="false">
                <shape>
                    <solid android:color="@color/cream_bright" />
                    <corners android:radius="@dimen/margin_xxxsmall" />
                    <stroke
                        android:width="@dimen/stroke_single"
                        android:color="@color/black" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>